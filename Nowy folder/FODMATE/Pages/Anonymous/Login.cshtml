@page
@model LoginModel
@{
    ViewData["Title"] = "Login page";
}

    <div class="container">
        <h3 class="text-center font-italic">Zaloguj się</h3>
        <p class="text-center font-weight-bold text-danger">@Model.Msg</p>
        <form method="post">
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Login</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.Username" />
                </div>
                <label class="col-sm-1 col-form-label">Hasło</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" asp-for="@Model.Password" />
                </div>
            </div>
            <div class="form-group">
                <label>&nbsp;</label>
                <input type="submit" class="btn btn-primary" value="Loguj" />
            </div>
        </form>
    </div>