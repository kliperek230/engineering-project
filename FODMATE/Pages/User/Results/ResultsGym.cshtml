@page
@model ResultsGymModel
@{
    Layout = "Shared/_LayoutUser";
    ViewData["Title"] = "Lifts";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome</title>
</head>
<body>
    <div class="container d-flex flex-column">
        <form method="post">
            <div class="form-group row justify-content-center">
                <label class="col-sm-2 col-form-label">Data</label>
                <select class="custom-select col-sm-2 form-control Day" name="Day">
                    @for (var x = 1; x <= 31; x++)
                    {
                        <option>@x</option>
                    }
                </select>
                <select class="custom-select col-sm-2 form-control Month" name="Month">
                    <option>Styczeń</option>
                    <option>Luty</option>
                    <option>Marzec</option>
                    <option>Kwiecień</option>
                    <option>Maj</option>
                    <option>Czerwiec</option>
                    <option>Lipiec</option>
                    <option>Sierpień</option>
                    <option>Wrzesień</option>
                    <option>Październik</option>
                    <option>Listopad</option>
                    <option>Grudzień</option>
                </select>
                <select class="custom-select col-sm-2 form-control Year" name="Year">
                    @for (var x = 2020; x >= 1901; x--)
                    {
                        <option>@x</option>
                    }
                </select>
            </div>
            <div class="form-group row justify-content-center">
                <label class="col-sm-2 col-form-label">Ćwiczenie</label>
                <select class="custom-select col-sm-2 form-control" name="Lift">
                    <option>Wyciskanie leżąc</option>
                    <option>Wyciskanie stojąc</option>
                    <option>Przysiad</option>
                    <option>Martwy ciąg</option>
                </select>
                <label class="col-sm-2 col-form-label">Wynik</label>
                <input type="text" class="col-sm-2 form-control" name="Value" placeholder="kg" />
            </div>
            <div class="form-group row justify-content-center">
                <button type="submit" id="submit_btn" class="submit btn btn-info pull-right">TAK</button>
            </div>
        </form>
    </div>
</body>
</html>




