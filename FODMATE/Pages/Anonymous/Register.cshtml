@page
@model FOODMATE.RegisterModel
@{
    ViewData["Title"] = "Register page";

}

    <div class="container">
        <h3 class="text-center font-italic">Zarejestruj się</h3>
        <p class="text-center font-weight-bold text-danger">@Model.Msg</p>
        <form method="post" id="register_form">
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Imię</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.FirstName" />
                </div>
                <label class="col-sm-1 col-form-label">Nazwisko</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.LastName" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Płeć</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" asp-for="@Model.Sex" />
                </div>
                <label class="col-sm-2 col-form-label">Data urodzenia</label>
                <div class="col-md-1">
                    <select class="form-control" name="Day">
                        @for (var x = 1; x <= 31; x++)
                        {
                            <option>@x</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-control" name="Month">
                        <option>Styczeń</option>
                        <option>Luty</option>
                        <option>Marzec</option>
                        <option>Kwiecień</option>
                        <option>Maj</option>
                        <option>Czerwiec</option>
                        <option>Lipiec</option>
                        <option>Sierpień</option>
                        <option>Wrzesień</option>
                        <option>Październik</option>
                        <option>Listopad</option>
                        <option>Grudzień</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-control" name="Year">
                        @for (var x = 2020; x >= 1901; x--)
                        {
                            <option>@x</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Wzrost</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.UHeight" />
                </div>
                <label class="col-sm-1 col-form-label">Waga</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.UWeight" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Nick</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.Username" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Email</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.Email" />
                </div>
                <label class="col-sm-1 col-form-label">Potwierdź</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="@Model.EmailConfirm" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Hasło</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" asp-for="@Model.Password" />
                </div>
                <label class="col-sm-1 col-form-label">Potwierdź</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" asp-for="@Model.PasswordConfirm" />
                </div>
            </div>
            <div class="form-group">
                <label>&nbsp;</label>
                <input type="submit" class="btn btn-primary" value="Rejestruj" />
            </div>
        </form>
    </div>
        
    
    
